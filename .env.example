# =============================================================================
# Doctor's Office AI Receptionist â€” Environment Variables
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control.
# =============================================================================

# -------------------------------------
# Vapi Configuration
# Get from: https://dashboard.vapi.ai
# -------------------------------------
VAPI_API_KEY=your_vapi_api_key_here
VAPI_ASSISTANT_ID=                     # Set after: python scripts/setup_assistant.py
VAPI_PHONE_NUMBER_ID=                  # Set after: python scripts/setup_phone.py
VAPI_REMINDER_ASSISTANT_ID=            # Optional: separate assistant for reminder calls

# -------------------------------------
# Twilio Configuration
# Get from: https://console.twilio.com
# -------------------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# -------------------------------------
# Anthropic (Claude LLM used by Vapi)
# Get from: https://console.anthropic.com
# -------------------------------------
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxx

# -------------------------------------
# Server
# -------------------------------------
SERVER_BASE_URL=https://your-public-url.ngrok.io   # Must be public HTTPS
PORT=8000

# -------------------------------------
# Practice Information
# -------------------------------------
BUSINESS_NAME=Greenfield Family Medicine
BUSINESS_HOURS=Monday through Friday, 8 AM to 5 PM
OFFICE_ADDRESS=123 Health Street, Suite 100, Springfield, ST 00000
PROVIDERS=Dr. Smith, Dr. Johnson, Dr. Patel
OFFICE_TIMEZONE=America/New_York    # IANA timezone, e.g. America/Chicago, America/Los_Angeles
OFFICE_OPEN_TIME=08:00              # 24-hour format HH:MM
OFFICE_CLOSE_TIME=17:00             # 24-hour format HH:MM

# -------------------------------------
# Routing Numbers
# -------------------------------------
HUMAN_AGENT_NUMBER=+1XXXXXXXXXX    # Front desk direct line
NURSE_LINE_NUMBER=+1XXXXXXXXXX     # Clinical nurse triage line
BILLING_LINE_NUMBER=+1XXXXXXXXXX   # Billing department direct line
AFTER_HOURS_NUMBER=+1XXXXXXXXXX    # On-call / answering service (leave blank to use voicemail)

# -------------------------------------
# Patient-Facing URLs (sent via SMS)
# -------------------------------------
INTAKE_FORM_URL=https://your-practice.com/new-patient    # New patient intake form
PATIENT_PORTAL_URL=https://portal.your-practice.com      # Patient portal (lab results, etc.)
